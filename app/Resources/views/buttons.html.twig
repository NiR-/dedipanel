{% macro show(url, message, role, object) %}
{% if (role is not empty and is_granted(role, object)) or role is empty %}
<a href="{{ url }}" class="btn btn-labeled btn-show pull-left">
    <span class="btn-label"><span class="icon-eye"></span></span>{{ message is empty ? 'sylius.show'|trans : message }}
</a>
{% endif %}
{% endmacro %}

{% macro generic(url, message, icon, role, object) %}
{% if (role is not empty and is_granted(role, object)) or role is empty %}
<a href="{{ url }}" class="btn btn-labeled btn-default margin-left">
    {% if icon is not empty %}<span class="btn-label"><span class="{{ icon }}"></span></span>{% endif %}{{ message }}
</a>
{% endif %}
{% endmacro %}

{% macro create(url, message, role, object, li=false) %}
{% if (role is not empty and is_granted(role, object)) or role is empty %}
{% if li %}<li>{% endif %}
<a href="{{ url }}" class="btn btn-labeled btn-primary">
    <span class="btn-label"><span class="icon-plus2"></span></span>{{ message is empty ? 'sylius.create'|trans : message }}
</a>
{% if li %}</li>{% endif %}
{% endif %}
{% endmacro %}

{% macro edit(url, message, role, object, li=false) %}
{% if (role is not empty and is_granted(role, object)) or role is empty %}
{% if li %}<li>{% endif %}
<a href="{{ url }}" class="btn btn-labeled btn-primary pull-left">
    <span class="btn-label"><span class="icon-uni41"></span></span>{{ message is empty ? 'sylius.edit'|trans : message }}
</a>
{% if li %}</li>{% endif %}
{% endif %}
{% endmacro %}

{% macro delete(url, message, disabled=false, modal=true, role, object, li=false) %}
{% if (role is not empty and is_granted(role, object)) or role is empty %}
{% if li %}<li>{% endif %}
{% if disabled %}
<span class="btn btn-labeled btn-danger pull-left margin-left">
    <span class="btn-label"><span class="icon-uni3B"></span></span>{{ message is empty ? 'sylius.delete'|trans : message }}
</span>
{% else %}
<form action="{{ url }}" method="post" class="no-margin">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-labeled btn-danger{% if modal %} btn-confirm{% endif %} pull-left margin-left" type="submit">
        <span class="btn-label"><span class="icon-uni3B"></span></span>{{ message is empty ? 'sylius.delete'|trans : message }}
    </button>
</form>
{% endif %}
{% if li %}</li>{% endif %}
{% endif %}
{% endmacro %}

{% macro back(url, message) %}
    <a href="{{ url }}">
        <span class="icon-arrow-circle-left" title="{{ 'sylius.back'|trans }}"></span>
    </a>
    
    {{ message }}
{% endmacro %}

{% macro manage(url, message) %}
<a href="{{ url }}" class="btn btn-labeled btn-success pull-left margin-left">
    <span class="btn-label"><span class="icon-modem"></span></span>{{ message is empty ? 'sylius.manage'|trans : message }}
</a>
{% endmacro %}

{% macro widget(url, message, modal=true, role, object) %}
