<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />

        <title>DediPanel</title>
        <link rel="shortcut icon" href="{{ asset('images/footer/logo-min.png') }}" />
        {% block stylesheets %}{% endblock %}

        <script type="text/javascript" src="../js/jquery-1.7.1.min.js"></script>
        <script type="text/javascript" src="../js/jquery-ui-1.8.17.custom.min.js"></script>
    </head>

    <body>
        <header>
            <div id="logo"></div>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<div id="profil">
				<ul id="mprofil">
					<li><span class="iprofil">X</span><a href="/logout">{{ 'menu.logout'|trans }}</a></li>		
					<li><span class="iprofil">U</span><a href="#">Profil</a>
						<ul>
							<li class="sousmenu">
								<span class="ismprofil">S</span>
								<a href="" id="profil-option">Options</a>
							</li>
							<li>
								<span class="ismprofil">K</span>
								<a href="" id="profil-detail">Info Compte</a>
							</li>
							<li>
								<span class="ismprofil">@</span>
								<a href="" id="profil-note">Notifications</a>
							</li>
							<li>
								<span class="ismprofil">u</span>
								<a href="" id="profil-stat">Statistiques</a> 
							</li>
						</ul>
					</li>
				</ul>
            </div>		
            <div class="clear"></div>

            <ul class="menu">
                <li><a href="{{ path('user_menu') }}">
                        <span class="icone"><img src="../images/menu/acceuil-h.png" /></span>
                        <div class="content"><h2 class="main">Acceuil</h2><h3 class="sub">Acceuil</h3></div>
                    </a> </li>
                <li><a href="{{ path('game_menu') }}">
                        <span class="icone">_</span>
                        <div class="content"><h2 class="main">Jeux</h2><h3 class="sub">Serveurs de jeux</h3></div>
                    </a> </li>
               {# <li><a href="{{ path('user_menu') }}">
                        <span class="icone">d</span>
                        <div class="content"><h2 class="main">VoIp</h2><h3 class="sub">Serveur vocaux</h3></div>
                    </a> </li>
                <li><a href="{{ path('user_menu') }}">
                        <span class="icone">U</span>
                        <div class="content"><h2 class="main">Utilisateurs</h2><h3 class="sub">GÃ©rer les utilisateurs</h3></div>
                    </a> </li> #}
                <li><a href="{{ path('config_menu') }}">
                        <span class="icone">S</span>
                        <div class="content"><h2 class="main">Configuration</h2><h3 class="sub">Options du panel</h3></div>
                    </a> </li>
            </ul>
            {% endif %}
        </header>

        <div id="page">{% block body %}{% endblock %}</div>

        <footer><p>
                <img src="{{ asset('images/footer/logo-min.png') }}"/> 
                Dedicated panel - Code & Design par Von et NiR | 
                <a href="http://www.dedicated-panel.net">www.dedicated-panel.net</a>.
            </p></footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
