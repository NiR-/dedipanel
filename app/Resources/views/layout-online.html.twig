{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/icomoon/style.css') }}" />
    
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/main.css') }}" />
    
    {% block bundleStylesheets %}{% endblock %}
{% endblock %}

{% block baseBody %}

    <div id="cols-container">
        <section id="sidebar">
            <div id="logo">
                <a href="{{ path('_welcome') }}">
                    <img src="{{ asset('images/header/logo.png') }}" title="DediPanel" />
                </a> 
            </div>
            <div class="user-profile">
                    <img alt="vooOnnN !!!" src="http://icons.iconarchive.com/icons/double-j-design/origami-colored-pencil/256/blue-user-icon.png">
                    <div class="user-info">
                            <a href="{{ path('sonata_user_profile_edit_authentication') }}">{{ app.user.username }}</a>
                            <em>
                            
                            </em>
                            <ul class="user-profile-actions">
                                    <li><a href="{{ path('sonata_user_profile_edit_authentication') }}"> 
                                            <span data-icon="&#x58;"></span>
                                    </a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">
                                        <span data-icon="&#x57;"></span>
                                    </a></li>
                            </ul>
                    </div>
            </div>
            <nav>
                <ul>
                    <li class="home">
                        <a href="{{ path('_welcome') }}">
                            <span data-icon="&#x50;" class="icon"></span>
                            <span class="menu-label">{{ 'menu.home'|trans }}</span>
                        </a>
                    </li>
                    <li class="steam">
                        <a href="{{ path('steam') }}">
                            <span data-icon="&#x6f;" class="icon"></span>
                            <span class="menu-label">{{ 'menu.steam'|trans }}</span>
                        </a>
                    </li>
                    <li class="minecraft">
                        <a href="{{ path('minecraft') }}">
                            <span data-icon="&#x52;" class="icon"></span>
                            <span class="menu-label">{{ 'menu.minecraft'|trans }}</span>
                        </a>
                    </li>                
                    <li class="machine">
                        <a href="{{ path('machine') }}">
                            <span data-icon="&#x51;" class="icon"></span>
                            <span class="menu-label">{{ 'menu.machine'|trans }}</span>
                        </a>
                    </li>
                    <li class="admin">
                        <a href="{{ path('sonata_admin_dashboard') }}">
                            <span data-icon="&#x25;" class="icon"></span>
                            <span class="menu-label">{{ 'menu.admin'|trans }}</span>
                        </a>
                    </li>
                </ul>
            </nav>
                
            <footer>
                <p>
                    DediPanel {% spaceless %}
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            {{ dedipanel.current_version }}

                            {% if dedipanel.update_available %}
                                &nbsp;({{ 'updateAvailable'|trans({'%versionAvailable%': dedipanel.version_available}) }})
                            {% endif %}
                        {% endif %}
                    {% endspaceless %} - Code & Design par Von et NiR<br />

                            <a target="_blank" href="http://www.dedicated-panel.net">dedicated-panel.net</a> | 
                            <a target="_blank" href="http://wiki.dedicated-panel.net">wiki</a> | 
                            <a target="_blank" href="http://forum.dedicated-panel.net">forum</a>
                </p>
            </footer>
        </section>

        <section id="inner">
            <h1 id="title" class="clearfix">{% block title %}{% endblock %}</h1>
            
            <div id="page-content" class="clearfix">{% block body %}{% endblock %}</div>

        </section>
    </div>
{% endblock %}