{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as sylius_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_teamspeak_index'), 'teamspeak.title.teamspeak'|trans) }}
{% endblock %}
        
{% block content %}
    <h2>{{ 'teamspeak.title.add'|trans }}</h2>

    {{ dedipanel_flashes.all() }}

    <form action="{{ path('dedipanel_teamspeak_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        {{ sylius_actions.create() }}
    </form>
{% endblock %}