{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_machine_show', {'id': machine.id}), 'machine.title.machine'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'machine.title.edit'|trans }}</h2>

    <form action="{{ path('dedipanel_machine_update', { 'id': machine.id }) }}" method="post" class="form-edit">    
        {{ form_widget(form) }}
        
        <div class="form-group clearfix">
            {{ dedipanel_actions.update(path('dedipanel_machine_show', {'id': machine.id})) }}    
            {% if is_granted('ROLE_DP_ADMIN_MACHINE_DELETE') %}
                {{ dedipanel_buttons.delete(path('dedipanel_machine_delete', {'id': machine.id})) }}
            {% endif %}
        </div>
    </form>
    

{% endblock %}
