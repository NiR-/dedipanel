{% extends "::layout-online.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_machine_show', {'id': machine.id}), 'machine.title.machine'|trans) }}
{% endblock %}

{% block body %}
    <h2>{{ 'machine.title.edit'|trans }}</h2>

    <form method="post" action="{{ path('dedipanel_machine_update', { 'id': machine.id }) }}" id="form-update" class="form-horizontal">  
        {{ form_widget(form) }}
    </form>
    
    <div class="form-group clearfix">
        {{ dedipanel_actions.update(path('dedipanel_machine_show', {'id': machine.id}), null, 'ROLE_DP_ADMIN_MACHINE_SHOW', machine) }}
        {{ dedipanel_buttons.delete(path('dedipanel_machine_delete', {'id': machine.id}), null, false, true, 'ROLE_DP_ADMIN_MACHINE_DELETE', machine) }}
    </div>         
{% endblock %}
