{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as actions %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_machine_show', {'id': machine.id}), 'machine.machine'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'machine.editMachine'|trans }}</h2>

    <form action="{{ path('dedipanel_machine_update', { 'id': machine.id }) }}" method="post" class="form-edit">    
        {{ form_widget(form) }}

        {{ actions.update(path('dedipanel_machine_show', {'id': machine.id})) }}    
    </form>
    
    {{ sylius_buttons.delete(path('dedipanel_machine_delete', {'id': machine.id})) }}
{% endblock %}
