{% extends "::layout.html.twig" %}
{% block title %}<a href="{{ path('machine') }}"><span class="titre">h</span></a>{{ 'machine.machine'|trans }}{% endblock %}
{% block content %}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>{{ 'machine.id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.privateIp'|trans }}</th>
                <td>{{ entity.privateIp }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.publicIp'|trans }}</th>
                <td>{{ entity.publicIp }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.port'|trans }}</th>
                <td>{{ entity.port }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.user'|trans }}</th>
                <td>{{ entity.user }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.home'|trans }}</th>
                <td>{{ entity.home }}</td>
            </tr>
            <tr>
                <th>{{ 'machine.genPrivKey'|trans }}</th>
                <td>{% if entity.privateKeyFilename|length > 0 %}
                        {{ 'machine.yes'|trans }}
                    {% else %}
                        {{ 'machine.no'|trans }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="buttons">
        <a class="info" href="{{ path('machine_edit', { 'id': entity.id }) }}" title="{{ 'machine.show'|trans }}"><span class="style-buttons">L</span></a>
        <a class="retry" href="{{ path('machine_connectionTest', { 'id': entity.id }) }}" title="{{ 'machine.edit'|trans }}"><span class="style-buttons">S</span></a>
    </div>
        <form action="{{ path('machine_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <input type="submit" value="{{ 'machine.del'|trans }}" name="submit" class="delete">
        </form>
    </ul>
{% endblock %}