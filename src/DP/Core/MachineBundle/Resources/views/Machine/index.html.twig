{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block bundleStylesheets %}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/dpmachine/css/machine.css') }}" />
{% endblock %}

{% block title %}
    {{ dedipanel_buttons.back(path('_welcome'), 'machine.machine'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'machine.machine'|trans }}</h2>

    <ul id="top-nav" class="nav nav-tabs">
        <li>
            {{ sylius_buttons.edit(path('dedipanel_machine_create'), 'sylius.add'|trans) }}
        </li>
    </ul>
    
    <table class="table table-striped machine-list">
        <thead>
            <tr>
                <th>{{ 'machine.id'|trans }}</th>
                <th>{{ 'machine.privateIp'|trans }}</th>
                <th>{{ 'machine.publicIp'|trans }}</th>
                <th>{{ 'machine.port'|trans }}</th>
                <th>{{ 'machine.user'|trans }}</th>
                <th>{{ 'machine.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for machine in machines %}
                <tr>
                    <td>{{ machine.id }}</td>
                    <td>{{ machine.privateIp }}</td>
                    <td>{{ machine.publicIp }}</td>
                    <td>{{ machine.port }}</td>
                    <td>{{ machine.user }}</td>

                    <td> 
                        <div class="btn-group">
                            {{ sylius_buttons.show(path('dedipanel_machine_show', {'id': machine.id})) }}
                            {{ sylius_buttons.edit(path('dedipanel_machine_update', {'id': machine.id})) }}
                            {{ sylius_buttons.manage(path('dedipanel_machine_connection_test', {'id': machine.id}), 'machine.connection_test'|trans) }}
                        </div>
                    </td>
                </tr>  
            {% endfor %}
        </tbody>
    </table>
{% endblock %}