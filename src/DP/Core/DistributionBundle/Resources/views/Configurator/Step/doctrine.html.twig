{% extends "::layout-installer.html.twig" %}

{% block body %}
    {% include "DPDistributionBundle:Configurator:steps.html.twig" %}

    <legend>{{ 'configurator.db.title'|trans }}</legend>
    <p class="legend-information">{{ 'configurator.db.description'|trans }}</p>

    <form action="{{ path('dedipanel_installer_step', {'type': configType, 'step': step}) }}" method="POST">
        {{ form_widget(form) }}

        <div class="form-actions">
            <p><input type="submit" value="{{ 'configurator.next'|trans }}" class="btn btn-primary" /></p>
            <p>{{ 'configurator.mandatory_fields'|trans }}</p>
        </div>
    </form>
{% endblock %}
