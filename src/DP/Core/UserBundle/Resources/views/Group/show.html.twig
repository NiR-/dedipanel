{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_group_index'), 'group.title.group'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'group.title.show'|trans }}</h2>

    <table class="table table-striped show-group">
        <tbody>
            <tr>
                <th>{{ 'group.fields.id'|trans }}</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>{{ 'group.fields.name'|trans }}</th>
                <td>{{ group.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group clearfix">
        {{ sylius_buttons.edit(path('dedipanel_group_update', {'id': group.id})) }}
        {{ sylius_buttons.delete(path('dedipanel_group_delete', {'id': group.id})) }}
    </div>
{% endblock %}