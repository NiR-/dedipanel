{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as sylius_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_user_index'), 'user.title.user'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'user.title.add'|trans }}</h2>

    <form action="{{ path('dedipanel_user_create') }}" method="post">
        {{ form_widget(form) }}
        {{ sylius_actions.create() }}
    </form>
{% endblock %}
