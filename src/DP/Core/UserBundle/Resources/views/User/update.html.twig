{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as sylius_actions %}
{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_user_show', {'id': user.id}), 'user.title.user'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'user.title.edit'|trans }}</h2>
    
    <ul id="top-nav" class="nav nav-tabs">
        <li>
            {{ sylius_buttons.edit(path('dedipanel_user_update_roles', {'id': user.id}), 'user.actions.edit_roles'|trans) }}
        </li>
    </ul>

    <form action="{{ path('dedipanel_user_update', { 'id': user.id }) }}" method="post" class="form-edit">    
        {{ form_widget(form) }}
        {{ sylius_actions.update(path('dedipanel_user_show', {'id': user.id})) }}    
    </form>
    
    {{ sylius_buttons.delete(path('dedipanel_user_delete', {'id': user.id})) }}
{% endblock %}
