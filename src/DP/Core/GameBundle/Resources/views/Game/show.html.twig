{% extends "::layout.html.twig" %}

{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_game_index'), 'game.title.game'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'game.title.show'|trans }}</h2>

    {{ dedipanel_flashes.all() }}

    <table class="table table-striped show-game"> 
        <tbody>
            <tr>
                <th>{{ 'game.fields.name'|trans }}</th>
                <td>{{ game.name }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.installName'|trans }}</th>
                <td>{{ game.installName }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.appId'|trans }}</th>
                <td>{{ game.appId }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.appMod'|trans }}</th>
                <td>{{ game.appMod }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.launchName'|trans }}</th>
                <td>{{ game.launchName }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.isSteamCmd'|trans }}</th>
                <td>
                    {{ dedipanel_buttons.yes_no(game.steamcmd) }}
                </td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.isSource'|trans }}</th>
                <td>
                    {{ dedipanel_buttons.yes_no(game.source) }}
                </td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.isOrangebox'|trans }}</th>
                <td>
                    {{ dedipanel_buttons.yes_no(game.orangebox) }}
                </td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.type'|trans }}</th>
                <td>
                    {{ game.type|capitalize }}
                </td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.bin'|trans }}</th>
                <td>{{ game.bin }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.map'|trans }}</th>
                <td>{{ game.map }}</td>
            </tr>
            
            <tr>
                <th>{{ 'game.fields.available'|trans }}</th>
                <td>
                    {{ dedipanel_buttons.yes_no(game.available) }}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-group clearfix">
        {{ dedipanel_buttons.edit(path('dedipanel_game_update', {'id': game.id})) }}
        {{ dedipanel_buttons.delete(path('dedipanel_game_delete', {'id': game.id})) }}
    </div>
{% endblock %}
