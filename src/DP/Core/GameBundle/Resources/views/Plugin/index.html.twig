{% extends '::layout-online.html.twig' %}

{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% block title %}
    {{ dedipanel_buttons.back(path('_welcome'), 'plugin.title.plugin'|trans) }}
{% endblock %}

{% block body -%}
    <h2>{{ 'plugin.title.index'|trans }}</h2>

    {% if is_granted('ROLE_DP_ADMIN_PLUGIN_CREATE') %}
    <ul id="top-nav" class="nav nav-tabs">
        <li>
            {{ dedipanel_buttons.create(path('dedipanel_plugin_create'), 'plugin.actions.add'|trans) }}
        </li>
    </ul>
    {% endif %}

    {{ dedipanel_flashes.all() }}
    
    {% for notice_level in ['success','error','info', 'warning'] %}
        {% set session_var = 'dp_flash_' ~ notice_level %}
        {% for flash in app.session.flashbag.get(session_var) %}
            <div class="alert {{ 'alert-' ~ notice_level }}">
                {{ flash|trans }}
            </div>
        {% endfor %}
    {% endfor %}

        
    <table class="table table-striped plugin-list">
        <thead>
            <tr>
                <th>{{ 'plugin.fields.name'|trans }}</th>
                <th>{{ 'plugin.fields.version'|trans }}</th>
                <th>{{ 'dedipanel.fields.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for plugin in plugins %}
                <tr>
                    <td>{{ plugin.name }}</td>
                    <td>{{ plugin.version }}</td>
                    <td> 
                        <div class="btn-group">
                            {{ dedipanel_buttons.show(path('dedipanel_plugin_show', {'id': plugin.id})) }}
                            {{ dedipanel_buttons.edit(path('dedipanel_plugin_update', {'id': plugin.id})) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
