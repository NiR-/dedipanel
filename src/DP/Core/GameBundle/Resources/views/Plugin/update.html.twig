{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_plugin_show', {'id': plugin.id}), 'plugin.title.plugin'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'plugin.title.edit'|trans }}</h2>

    <form id="form-update" action="{{ path('dedipanel_plugin_update', { 'id': plugin.id }) }}" method="post" class="form-edit">    
        {{ form_widget(form) }}
    </form>
        
    <div class="form-actions">
        {{ dedipanel_actions.update(path('dedipanel_plugin_show', {'id': plugin.id})) }}    
        {{ dedipanel_buttons.delete(path('dedipanel_plugin_delete', {'id': plugin.id})) }}
    </div>

{% endblock %}
