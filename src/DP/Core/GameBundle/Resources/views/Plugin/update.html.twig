{% extends "::layout-online.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% form_theme form 'MopaBootstrapBundle:Form:fields.html.twig' %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_plugin_show', {'id': plugin.id}), 'plugin.title.plugin'|trans) }}
{% endblock %}

{% block body %}
    <h2>{{ 'plugin.title.edit'|trans }}</h2>

    <form method="post" action="{{ path('dedipanel_plugin_update', { 'id': plugin.id }) }}" id="form-update" class="form-horizontal">  
        {{ form_widget(form) }}
    </form>
        
    <div class="form-actions clearfix">
        {{ dedipanel_actions.update(path('dedipanel_plugin_show', {'id': plugin.id})) }}    
        {{ dedipanel_buttons.delete(path('dedipanel_plugin_delete', {'id': plugin.id}), null, false, true, 'ROLE_DP_ADMIN_PLUGIN_DELETE', plugin) }}
    </div>
{% endblock %}
