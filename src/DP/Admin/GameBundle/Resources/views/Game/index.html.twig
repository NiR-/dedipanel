{% extends '::layout-online.html.twig' %}

{% block title %}
    {{ 'game.list'|trans }}
{% endblock %}

{% block body -%}
    <div class="page-header">
        <h1>{{ 'game.list'|trans }}</h1>
    </div>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Installname</th>
                <th>Steamcmd</th>
                <th>Launchname</th>
                <th>Bin</th>
                <th>Appid</th>
                <th>Appmod</th>
                <th>Orangebox</th>
                <th>Source</th>
                <th>Map</th>
                <th>Available</th>
                <th>Bindir</th>
                <th>Sourceimagesmaps</th>
                <th>Type</th>
                <th>Configtemplate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('game_admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.installName }}</td>
                <td>{{ entity.steamCmd }}</td>
                <td>{{ entity.launchName }}</td>
                <td>{{ entity.bin }}</td>
                <td>{{ entity.appId }}</td>
                <td>{{ entity.appMod }}</td>
                <td>{{ entity.orangebox }}</td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.map }}</td>
                <td>{{ entity.available }}</td>
                <td>{{ entity.binDir }}</td>
                <td>{{ entity.sourceImagesMaps }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.configTemplate }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('game_admin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('game_admin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_admin_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
