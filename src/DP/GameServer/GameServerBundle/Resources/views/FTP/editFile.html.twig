{% extends "::layout.html.twig" %}

{% block title %}
    {{ 'game.ftp.editTitle'|trans }}
    
    <nav id="tabs" class="nav nav-tabs">
        <a href="{{ path(baseRoute ~ '_ftp_show', {id: sid, path: dirPath}) }}">
            {{ 'game.back'|trans }}
        </a>
    </nav>
{% endblock %}

{% block content %}    
    <form action="{{ path(baseRoute ~ '_ftp_edit', {id: sid, path: path}) }}" method="post">	
        <fieldset>
            {{ form_widget(form) }}
            
            <input type="submit" value="{{ 'game.edit'|trans }}" name="submit" class="submit"></fieldset>
        </fieldset>
    </form>
{% endblock %}