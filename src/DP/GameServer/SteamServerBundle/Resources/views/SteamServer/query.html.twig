{% extends "::layout.html.twig" %}
{% block content %}
    <h1>{{ 'steam.query'|trans }}</h1>
    
    {% if entity.query.latency == false %}
        <p>Timeout</p>
    {% else %}
        <p>
            <img src="{{ entity.game.sourceImagesMaps }}{{ entity.query.serverInfos.map }}.jpg"
                alt="{{ entity.query.serverInfos.map }}" />
        </p>
        
        <table>
            <tr><th>Nom</th><th>Score</th><th>Connect√© depuis</th></tr>
            {% for player in entity.query.players %}
                <tr>
                    <th>{{ player.nom }}</th>
                    <td>{{ player.score }}</td>
                    <td>{{ player.timeConnected }}</td>
                </th>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}