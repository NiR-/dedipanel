{% extends "::layout.html.twig" %}
{% block title %}<a href="{{ path('steam') }}"><span class="titre">h</span></a>{{ 'steam.editTitle'|trans }}{% endblock %}
{% block content %}
    <form action="{{ path('steam_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset id="validation"> 
            {{ form_widget(edit_form) }}

            <input type="submit" value="{{ 'steam.edit'|trans }}" name="submit" class="submit">                

        </fieldset> 
    </form>       
    <span class="deletebutton">
        <form action="{{ path('steam_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                <input type="submit" value="{{ 'game.del'|trans }}" name="submit" class="delete">
            </form>
        </span>
{% endblock %}
