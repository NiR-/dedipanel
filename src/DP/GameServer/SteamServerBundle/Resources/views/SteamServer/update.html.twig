{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_steam_index'), 'steam.title.steam'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'steam.title.edit'|trans }}</h2>
        
    <form id="form-update" action="{{ path('dedipanel_steam_update', { 'id': steam.id }) }}" method="post" class="form-edit">
        {{ form_widget(form) }}
    </form>
    
    <div class="form-actions">
        {{ dedipanel_actions.update(path('dedipanel_steam_show', {'id': steam.id})) }}
        {% if is_granted('ROLE_DP_GAME_STEAM_DELETE') %}
            {{ dedipanel_buttons.delete(path('dedipanel_steam_delete', {'id': steam.id})) }}
            {{ dedipanel_buttons.delete(path('dedipanel_steam_delete', {'id': steam.id, 'fromMachine': true})) }}
        {% endif %}
    </div>
{% endblock %}
