{% extends "::layout.html.twig" %}

{% import '::actions.html.twig' as dedipanel_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block bundleStylesheets %}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/dpgameserver/css/game.css') }}" />
{% endblock %}

{% block title %}
    {% set path = resource.relativePath %}

    {% if resource is file %}
        {% set path = resource.path %}
    {% endif %}

    {{ dedipanel_buttons.back(path('dedipanel_steam_ftp_show', {'id': server.id, 'path': path}), 'steam.title.steam'|trans) }}
{% endblock %}

{% block content %}    
    <h2>{{ 'game.ftp.title.edit'|trans }}</h2>
    
    <ul id="top-nav" class="nav nav-tabs">
        <li>
            <a href="{{ path('dedipanel_steam_ftp_create', {'id': server.id, 'type': 'file', 'path': resource.path}) }}">
                {{ 'game.ftp.create_file'|trans }}
            </a>
        </li>
        <li>
            <a href="{{ path('dedipanel_steam_ftp_create', {'id': server.id, 'type': 'directory', 'path': resource.path}) }}">
                {{ 'game.ftp.create_directory'|trans }}
            </a>
        </li>
        
        {# On ajoute un lien pour supprimer le dossier courant #}
        {# Si l'utilisateur n'est pas dans le dossier root du serveur #}
        {% if resource.path is not empty %}
            <li>
                {{ dedipanel_buttons.delete(path('dedipanel_steam_ftp_delete', {'id': server.id, path: resource.relativePath})) }}
            </li>
        {% endif %}
    </ul>
    
    <form action="{{ path('dedipanel_steam_ftp_update', {id: server.id, path: resource.relativePath}) }}" method="post" class="form-ftp">
        {{ form_widget(form) }}
        
        <div class="form-actions">
            {{ dedipanel_actions.update(path('dedipanel_steam_ftp_show', {'id': server.id, 'path': resource.path})) }}
        </div>
    </form>
{% endblock %}