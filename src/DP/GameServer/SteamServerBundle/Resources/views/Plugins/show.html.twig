{% extends "::layout.html.twig" %}
{% block content %}
    <h1>{{ 'steam.plugins.showTitle'|trans }}</h1>
    
    <ul class="record_actions">
        <li>
            <a href="{{ path('steam') }}">
                {{ 'steam.back'|trans }}
            </a>
        </li>
    </ul>
    
    <table>
        <tr>
            <th>{{ 'steam.plugins.name'|trans }}</th>
            <th>{{ 'steam.plugins.status'|trans }}</th>
        </tr>
        
        {% for plugin in server.installedPlugins %}
            <tr>
                <th><a href="{{ path('plugin_show', {'id': plugin.id }) }}">
                        {{ plugin.name }}
                </a></th>
                <td><a href="{{ path('steam_plugins_uninstall', {'id': server.id, 'plugin': plugin.id}) }}">
                    {{ 'steam.plugins.installed'|trans }}
                </a></td>
            </tr>
        {% endfor %}
            
        {% for plugin in server.notInstalledPlugins %}
            <tr>
                <th><a href="{{ path('plugin_show', {'id': plugin.id }) }}">
                        {{ plugin.name }}
                </a></th>
                <td><a href="{{ path('steam_plugins_install', {'id': server.id, 'plugin': plugin.id}) }}">
                    {{ 'steam.plugins.notInstalled'|trans }}
                </a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}