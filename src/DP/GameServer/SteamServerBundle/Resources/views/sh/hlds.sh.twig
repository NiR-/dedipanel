SCREEN_NAME="{{ screenName }}"

case "$1" in
    start)
        if [ `$0 status` = "Not running." ]; then
            echo "starting "
            cd {{ binDir }}
            screen -dmS $SCREEN_NAME ./{{ bin }} -game {{ launchName }} +ip {{ ip }} -port {{ port }} +maxplayers {{ maxplayers }} +map {{ startMap }} -autoupdate
        fi
        
        exit ${?}
    ;;

    stop)
        if [ `$0 status` = "Started." ]; then
            echo "stop"
            PID=`ps aux | grep SCREEN | grep $SCREEN_NAME | awk '{print $2}'`
            kill $PID
        fi

        exit ${?}
    ;;

    restart)
        $0 stop
        sleep 1
        $0 start

        exit ${?}
    ;;

    status)
        PID=`ps aux | grep SCREEN | grep $SCREEN_NAME | wc -l`
        
        if [ $PID -eq 1 ]; then
            echo "Started."
        else
            echo "Not running."
        fi
    ;;
    
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit ${?}
    ;;
esac