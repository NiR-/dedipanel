{% extends "::layout.html.twig" %}
{% block content %}
    <h1>{{ 'steam.cfg.showTitle'|trans }}</h1>
    
    <ul class="record_actions">
        <li>
            <a href="{{ path('steam') }}">
                {{ 'steam.back'|trans }}
            </a>
        </li>
    </ul>
    
    {{ currentPath }}
    
    <ul>
        {% if currentPath is not empty %}
            {% set path = currentPath ~ '..' %}
            <li class="dir">
                <a href="{{ path('steam_cfg_show', {'id': sid, 'path': path}) }}">..</a>
            </li>
        {% endif %}
        {% for dir in dirContent['dirs'] %}
            {% set path = currentPath ~ dir['name'] %}
            <li class="dir">
                <a href="{{ path('steam_cfg_show', {'id': sid, 'path': path }) }}">
                    {{ dir['name'] }}
                </a>
            </li>
        {% endfor %}
        {% for file in dirContent['files'] %}
            <li class="file">{{ file['name'] }}</li>
        {% endfor %}
    </ul>
{% endblock %}