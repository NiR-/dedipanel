{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:actions.html.twig' as sylius_actions %}
{% import '::buttons.html.twig' as dedipanel_buttons %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/dpminecraftserver/js/add.js') }}"></script>
{% endblock %}

{% block title %}
    {{ dedipanel_buttons.back(path('dedipanel_minecraft_index'), 'minecraft.title.minecraft'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'minecraft.title.add'|trans }}</h2>
    
    <form action="{{ path('dedipanel_minecraft_create') }}" method="post" {{ form_enctype(form) }} id="form-edit">
        {{ form_widget(form) }}
        {{ sylius_actions.create() }}
    </form>
{% endblock %}
