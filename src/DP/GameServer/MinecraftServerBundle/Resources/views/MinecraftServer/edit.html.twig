{% extends "::layout.html.twig" %}

{% block title %}
    <a href="{{ path('minecraft') }}">
        <span class="titre icone">h</span>
    </a>
    
    {{ 'minecraft.editTitle'|trans }}
{% endblock %}

{% block content %}
    <form action="{{ path('minecraft_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} id="form-edit">
        {{ form_widget(edit_form) }}
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ 'game.edit'|trans }}</button>
        </div>
    </form>

    <form action="{{ path('minecraft_delete', { 'id': entity.id }) }}" method="post" id="form-delete">
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger">{{ 'game.del'|trans }}</button>
    </form>
{% endblock %}
