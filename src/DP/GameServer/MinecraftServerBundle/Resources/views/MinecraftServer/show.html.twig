{% extends "::layout.html.twig" %}

{% block title %}MinecraftServer{% endblock %}

{% block content %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Port</th>
                <td>{{ entity.port }}</td>
            </tr>
            <tr>
                <th>Installationstatus</th>
                <td>{{ entity.installationStatus }}</td>
            </tr>
            <tr>
                <th>Dir</th>
                <td>{{ entity.dir }}</td>
            </tr>
            <tr>
                <th>Maxplayers</th>
                <td>{{ entity.maxplayers }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('minecraft') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('minecraft_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('minecraft_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}