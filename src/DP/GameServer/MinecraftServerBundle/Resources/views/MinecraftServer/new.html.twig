{% extends "::layout.html.twig" %}

{% form_theme form _self %}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul>
        {% for error in errors %}
            <li>{% spaceless %}
                {% autoescape false %}
                    {{ error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                    }}
                {% endautoescape %}
            {% endspaceless %}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/dpminecraftserver/js/add.js') }}"></script>
{% endblock %}

{% block title %}
    <a href="{{ path('minecraft') }}"> 
        <span class="icon" data-icon="&#x29;" title="{{ 'game.back'|trans }}"></span>
    </a>
    
    {{ 'minecraft.title'|trans }}
{% endblock %}

{% block content %}
    <h2>{{ 'minecraft.add'|trans }}</h2>
    
    <form action="{{ path('minecraft_create') }}" method="post" {{ form_enctype(form) }} id="form-edit">
        {{ form_widget(form) }}
        
        <div class="form-actions">
            <button class="btn btn-primary">{{ 'minecraft.create'|trans }}</button>
        </div>
    </form>
{% endblock %}
