{% extends "::layout.html.twig" %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/dpgameserver/js/details.js') }}"></script>
{% endblock %}
    
{% block title %}
    <a href="{{ path('DPGameServerBundle_menu') }}"> 
        <div class="fsBack" aria-hidden="true" data-icon="&#x29;" title="{{ 'game.back'|trans }}"></div>
    </a>
    
    <p>{{ 'minecraft.title'|trans }}</p>
{% endblock %}

{% block content %}
    <legend>{{ 'minecraft.list'|trans }}</legend>

    <ul id="menu-legend" class="nav nav-tabs">
        <li class="pull-right">
            <a href="{{ path('minecraft_new') }}">
                {{ 'minecraft.add'|trans }}
            </a>
        </li>
    </ul>

    <div id="minecraft" class="server-list">
        {% for entity in entities %}
            {% if entity.getInstallationStatus < 101 %}
                <div class="row server-item" rel="{{ entity.id }}">
                    <div class="span3">
                        <div class="titre">
                            <a href="{{ path('minecraft_show', {id: entity.id}) }}">{{ entity.name }}</a>
                        </div>
                        
                        <div class="description">
                            {{ entity.machine.publicIp }}:{{ entity.port }}
                        </div>
                    </div>
                    
                    <div class="span4">
                        <div class="installation-status">
                            <img src="/images/icones/serveur/install.png" alt="{{ 'game.updateStatus'|trans }}" />
                            <span class="installation">
                                <strong>
                                    <a href="{{ path('minecraft_install', {id: entity.id }) }}">{{ 'game.updateStatus'|trans }}</a>
                                </strong>
                            </span>
                        </div>
                    </div>
                        
                    <div class="span5">
                        <div class="progress progress-info progress-striped">
                            <div class="bar" style="width: {{ entity.installationStatus }}%"></div>
                            
                            {{ entity.installationStatus }} %
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row server-item" rel="{{ entity.id }}">
                    <div class="span2">
                        <a href="{{ path('minecraft_show', {'id': entity.id }) }}">
                            <img src="/images/serveur/viewer/{{ entity.game.installname }}.png" alt="{{ entity.game }}" />
                        </a>
                    </div>
                    
                    <div class="span9">
                        <div class="titre">
                            <a href="{{ path('minecraft_show', {id: entity.id}) }}">{{ entity.name }}</a>
                        </div>

                        <div class="description">
                            {{ entity.machine.publicIp }}:{{ entity.port }}
                            
                            {% if entity.query.online %}
                                <span class="info">
                                    {{ 'game.map'|trans({'%map%': entity.query.serverInfos['map']}) }}
                                </span>
                                <span class="info">
                                    <strong>
                                        {{ entity.query.serverInfos['numplayers'] }} / 
                                        {{ entity.query.serverInfos['maxplayers'] }}
                                    </strong>
                                </span>
                            {% else %}
                                <span class="info"><strong>{{ 'game.offline'|trans }}</strong></span>
                            {% endif %}	
                        </div>
                    </div>
                    <div class="span5 actions">
                        {% if entity.query.online %}
                            <a href="{{ path('minecraft_changeState', { 'id': entity.id, 'state': 'stop' }) }}"><div class="fsGame" aria-hidden="true" data-icon="&#x24;" title="{{ 'game.stop'|trans }}"></div></a>
                            <a href="{{ path('minecraft_changeState', { 'id': entity.id, 'state': 'restart' }) }}"><div class="fsGame" aria-hidden="true" data-icon="&#x27;" title="{{ 'game.restart'|trans }}"></div></a>
                        {% else %}
                            <a href="{{ path('minecraft_changeState', { 'id': entity.id, 'state': 'start' }) }}"><div class="fsGame" aria-hidden="true" data-icon="&#x22;" title="{{ 'game.start'|trans }}"></div></a>
                        {% endif %}

                        <a href="{{ path('minecraft_edit', {id: entity.id }) }}">
                            <div class="fsGame" aria-hidden="true" data-icon="&#x25;" title="{{ 'game.edit'|trans }}"></div>
                        </a>
                        
                        {% if entity.game.isBukkit %}
                            <a href="{{ path('minecraft_plugin_show', {id: entity.id }) }}">
                                <div class="fsGame" aria-hidden="true" data-icon="&#x56;" title="{{ 'game.plugin.title'|trans }}"></div>
                            </a>
                        {% endif %}
                        
                        <a href="{{ path('minecraft_ftp_show', {id: entity.id }) }}">
                            <div class="fsGame" aria-hidden="true" data-icon="&#x26;" title="{{ 'game.ftp.title'|trans }}"></div>
                        </a>
                        
                        {% if entity.query.online %}
                            <a href="{{ path('minecraft_show', {id: entity.id}) }}" class="slide">
                                <div class="fsGame" aria-hidden="true" data-icon="&#x21;" title="{{ 'minecraft.show'|trans }}"></div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            
                <div class="details" rel="{{ entity.id }}">
                    <div class="tabbable tabs-left">
                        {# <ul class="nav nav-tabs">
                            <li class="active"><a href="#lA" data-toggle="tab">{{ 'game.general'|trans }}</a></li>
                        </ul> #}

                        <div class="tab-content">
                            <div class="tab-pane active" id="lA"> 
                                {% if entity.query.online %}
                                    <div class="row description-general">
                                        <div class="span3 offset4">
                                            {{ entity.query.activePlugins }}
                                        </div>
                                        <div class="span4">
                                            <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>{{ 'game.player'|trans }}</th>
                                                    <th>{{ 'game.score'|trans }}</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for player in entity.query.players %}
                                                    <tr>
                                                        <td>{{ player.nom }}</td>
                                                        <td>{{ player.score }}</td>
                                                    </tr>
                                                {% else %}
                                                    <tr><th colspan="2">{{ 'game.noPlayerConnected'|trans }}</th></tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
