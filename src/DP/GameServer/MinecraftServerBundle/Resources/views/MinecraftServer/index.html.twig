{% extends "::layout.html.twig" %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as sylius_buttons %}
{% import '::buttons.html.twig' as dedipanel_buttons %}
{% import '::flash_messages.html.twig' as dedipanel_flashes %}

{% block bundleStylesheets %}
    <link rel="stylesheet" media="screen" href="{{ asset('bundles/dpgameserver/css/game.css') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/dpgameserver/js/details.js') }}"></script>
{% endblock %}

{% block title %}
    {{ dedipanel_buttons.back(path('_welcome'), 'minecraft.title.minecraft'|trans) }}
{% endblock %}

{% block content %}
    <h2>{{ 'minecraft.title.index'|trans }}</h2>
    
    {% if is_granted('ROLE_DP_GAME_MINECRAFT_CREATE') %}
        <ul id="top-nav" class="nav nav-tabs">
            <li>
                <a href="{{ path('dedipanel_minecraft_create') }}">
                    {{ 'minecraft.add'|trans }}
                </a>
            </li>
        </ul>
    {% endif %}

    {{ dedipanel_flashes.all() }}
    
    {% for message in app.session.flashbag.get('stateChanged') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ message|trans }}
        </div>
    {% endfor %}

    <div id="minecraft" class="server-list">
        {% for entity in minecrafts %}
            <div class="server-item clearfix">
                {% if not entity.isInstallationEnded %}
                    <div class="principal clearfix">
                        <div class="game-image">
                            <a href="{{ path('dedipanel_minecraft_show', {'id': entity.id }) }}">
                                <img src="{{ asset('images/serveur/viewer/' ~ entity.game.installname ~ '.png') }}" alt="{{ entity.game }}" />
                            </a>
                        </div>
                        
                        <div class="infos">
                            <div class="titre">
                                <a href="{{ path('dedipanel_minecraft_show', {id: entity.id}) }}">{{ entity.name }}</a>
                            </div>

                            <div class="description">
                                <span class="address">
                                    {{ entity.machine.publicIp }}:{{ entity.port }}
                                </span>
                                
                                {% if not is_granted('ROLE_DP_GAME_MINECRAFT_UPDATE') %}
                                    <span class="install-in-progress">
                                        {{ 'game.installation_in_progress'|trans }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        {% if is_granted('ROLE_DP_GAME_MINECRAFT_CREATE') or is_granted('ROLE_DP_GAME_MINECRAFT_UPDATE') %}
                            <div class="installation">
                                <div class="update-status">
                                    <img src="{{ asset('images/icones/serveur/install.png') }}" alt="{{ 'game.update_status'|trans }}" />
                                    <a href="{{ path('dedipanel_minecraft_install', {id: entity.id }) }}">{{ 'game.update_status'|trans }}</a>
                                </div>
                                
                                <div id="installation-progress" class="progress" value="{{ entity.installationStatus }}"></div>
                                
                                {# <div class="progress progress-info progress-striped">
                                    <div class="bar" style="width: {{ entity.installationStatus }}%"></div>
    
                                    {{ entity.installationStatus }} %
                                </div> #}
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    {% set banned = (entity.query.isBanned(true) == true) %} 
                    {% set online = (entity.query.online != false) %}
                    
                    <div class="principal clearfix">
                        <div class="game-image">
                            <a href="{{ path('dedipanel_minecraft_show', {'id': entity.id }) }}">
                                <img src="{{ asset('images/serveur/viewer/' ~ entity.game.installname ~ '.png') }}" alt="{{ entity.game }}" />
                            </a>
                        </div>

                        <div class="infos">
                            <div class="titre">
                                <a href="{{ path('dedipanel_minecraft_show', {id: entity.id}) }}">{{ entity.name }}</a>
                            </div>

                            <div class="description">
                                <span class="address">{{ entity.machine.publicIp }}:{{ entity.port }}</span>

                                {% if online %}
                                    <br />
                                    
                                    <span class="map">
                                        {{ 'game.map'|trans({'%map%': entity.query.serverInfos['map']}) }}
                                    </span>
                                    <span class="players">
                                        {{ entity.query.serverInfos['numplayers'] }} / 
                                        {{ entity.query.serverInfos['maxplayers'] }}
                                    </span>
                                {% elseif banned %}
                                        <span class="banned">{{ 'game.banned'|trans }}</span>
                                {% else %}
                                    <span class="offline">{{ 'game.offline'|trans }}</span>
                                {% endif %}	
                            </div>
                        </div>
                        
                        {% if entity.isInstallationEnded %}
                            {% include 'DPMinecraftServerBundle:MinecraftServer:actionBar.html.twig' with {show: true, online: online, server: entity} %}
                        {% endif %}
                    </div>

                    <div class="details" rel="{{ entity.id }}">
                        {% if online %}
                            <div class="map-image">
                            </div>
                            
                            <div class="description-general">
                                <div class="span3 offset4">
                                    {{ entity.query.activePlugins }}
                                </div>
                                <div class="players">
                                    <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>{{ 'game.player'|trans }}</th>
                                            <th>{{ 'game.score'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for player in entity.query.players %}
                                            <tr>
                                                <td>{{ player.nom }}</td>
                                                <td>{{ player.score }}</td>
                                            </tr>
                                        {% else %}
                                            <tr><th colspan="2">
                                                {{ 'game.noPlayerConnected'|trans }}
                                            </th></tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
