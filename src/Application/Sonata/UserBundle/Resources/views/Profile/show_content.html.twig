<form action="{{ path('fos_user_profile_edit') }}" method="post">
    <fieldset id="validation"> 
        <label for="name" class=" required">{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" id="name" value="{{ user.username }}" disabled="disabled"><br>
        <label for="mail" class=" required">{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" id="mail" value="{{ user.email }}" disabled="disabled"><br>
    </fieldset> 
</form>       
<ul>
    <li><a href="{{ path('fos_user_profile_edit') }}">
            {{ 'profile.link.edit'|trans({}, 'FOSUserBundle') }}</a></li>
    <li class="submit"><a href="{{ path('fos_user_change_password') }}">
            {{ 'profile.link.change_password'|trans({}, 'FOSUserBundle') }}</a></li>
</ul>